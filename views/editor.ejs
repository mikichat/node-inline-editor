        let pendingRestoreFile = null;

        // ë°±ì—… ë‚´ìš© ë¯¸ë¦¬ë³´ê¸°
        // ë°±ì—… ë‚´ìš© ë¯¸ë¦¬ë³´ê¸°
        async function previewBackup(backupFile) {
            try {
                // 1. ë°±ì—… ë‚´ìš© ê°€ì ¸ì˜¤ê¸°
                const response = await fetch(`/backup-content?filename=${encodeURIComponent(filename)}&backupFile=${encodeURIComponent(backupFile)}`);
                const result = await response.json();

                if (result.success) {
                    pendingRestoreFile = backupFile;
                    const previewEl = document.getElementById('previewDiffArea');
                    previewEl.innerHTML = '<div style="text-align:center; padding: 20px;">ë¹„êµ ì¤‘...</div>';
                    document.getElementById('previewModal').classList.add('active');

                    if (result.type === 'snapshot') {
                        // 2. í˜„ì¬ ì†ŒìŠ¤ ê°€ì ¸ì˜¤ê¸° (ë¹„êµìš©)
                        const sourceResp = await fetch(`/source?filename=${encodeURIComponent(filename)}`);
                        const sourceRes = await sourceResp.json();
                        const currentSource = sourceRes.content || '';

                        // 3. Diff ê³„ì‚° (ì „ì²´ íŒŒì¼ ë¹„êµ)
                        const diff = Diff.diffLines(currentSource, result.content);

                        // 4. ë Œë”ë§
                        let html = '';
                        diff.forEach((part) => {
                            // ë³€ê²½ì‚¬í•­ì´ ìˆëŠ” ë¶€ë¶„ë§Œ ìƒ‰ìƒ ì ìš©
                            const colorClass = part.added ? 'diff-added' :
                                part.removed ? 'diff-removed' : 'diff-unchanged';

                            // í…ìŠ¤íŠ¸ ì´ìŠ¤ì¼€ì´í”„ ë° ì¤„ë°”ê¿ˆ ì²˜ë¦¬
                            const escaped = part.value
                                .replace(/&/g, '&amp;')
                                .replace(/</g, '&lt;')
                                .replace(/>/g, '&gt;');

                            html += `<span class="${colorClass}">${escaped}</span>`;
                        });
                        previewEl.innerHTML = html;

                        // ì²« ë²ˆì§¸ ë³€ê²½ ì‚¬í•­ìœ¼ë¡œ ìŠ¤í¬ë¡¤ ì´ë™
                        setTimeout(() => {
                            const firstDiff = previewEl.querySelector('.diff-added, .diff-removed');
                            if (firstDiff) {
                                firstDiff.scrollIntoView({ behavior: 'smooth', block: 'center' });
                            }
                        }, 100);

                    } else if (result.type === 'diff') {
                        // Diff íŒŒì¼ì¸ ê²½ìš° (ì´ë¯¸ êµ¬ì¡°í™”ëœ ë°ì´í„°)
                        const data = result.data;
                        let html = `<div class="diff-header">ë¼ì¸ ${data.lineNumber} ìˆ˜ì •ë¨</div>`;

                        html += `<div class="diff-removed">[- ë³€ê²½ ì „]</div>`;
                        html += `<div class="diff-removed">${escapeHtml(data.before)}</div>`;
                        html += `<div class="diff-added" style="margin-top: 10px;">[+ ë³€ê²½ í›„]</div>`;
                        html += `<div class="diff-added">${escapeHtml(data.after)}</div>`;

                        previewEl.innerHTML = html;
                    }
                } else {
                    showToast(result.error || 'ë‚´ìš©ì„ ë¶ˆëŸ¬ì˜¬ ìˆ˜ ì—†ìŠµë‹ˆë‹¤.', true);
                }
            } catch (err) {
                console.error(err);
                showToast('ë¯¸ë¦¬ë³´ê¸° ë¡œë“œ ì¤‘ ì˜¤ë¥˜ ë°œìƒ', true);
            }
        }

        function escapeHtml(text) {
            return text
                .replace(/&/g, "&amp;")
                .replace(/</g, "&lt;")
                .replace(/>/g, "&gt;");
        }

