    <div class="toast" id="toast"></div>

    <script>
        const filename = '<%= filename %>';
        let originalText = '';

        // í† ìŠ¤íŠ¸ ì•Œë¦¼ í‘œì‹œ
        function showToast(message, isError = false) {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.className = 'toast' + (isError ? ' error' : '');
            toast.classList.add('show');
            setTimeout(() => toast.classList.remove('show'), 3000);
        }

        // contenteditable ì„¤ì •
        document.querySelectorAll('[data-line]').forEach(el => {
            el.setAttribute('contenteditable', 'true');

            // focus ì‹œ ì›ë³¸ ì €ì¥
            el.addEventListener('focus', function () {
                originalText = this.innerHTML;
            });

            // blur ì‹œ ë³€ê²½ ê°ì§€ ë° ì €ì¥
            el.addEventListener('blur', function () {
                const newText = this.innerHTML.trim();
                if (newText !== originalText.trim()) {
                    const lineNumber = this.getAttribute('data-line');
                    saveContent(lineNumber, newText);
                }
            });

            // Enter í‚¤ ë°©ì§€
            el.addEventListener('keydown', function (e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    this.blur();
                }
            });

            // ë¶™ì—¬ë„£ê¸° ì‹œ í…ìŠ¤íŠ¸ë§Œ í—ˆìš©
            el.addEventListener('paste', function (e) {
                e.preventDefault();
                const text = e.clipboardData.getData('text/plain');
                document.execCommand('insertText', false, text);
            });

            // ë”ë¸”í´ë¦­ ì‹œ ë©€í‹°ë¼ì¸ í¸ì§‘ íŒì—… ì—´ê¸°
            el.addEventListener('dblclick', function (e) {
                e.preventDefault();
                const lineNumber = this.getAttribute('data-line');
                openMultilineEditorForLine(lineNumber);
            });
        });

        // ì €ì¥ API í˜¸ì¶œ
        async function saveContent(lineNumber, content) {
            try {
                const response = await fetch('/save', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ filename, line_number: lineNumber, content })
                });

                const result = await response.json();

                if (result.success) {
                    showToast('âœ“ ì €ì¥ë˜ì—ˆìŠµë‹ˆë‹¤');
                } else if (result.isMultiline) {
                    // ë©€í‹°ë¼ì¸ ìš”ì†Œ - íŒì—… ì—ë””í„° ì—´ê¸°
                    openMultilineEditor(lineNumber, result.startLine, result.endLine, result.originalContent);
                } else {
                    showToast(result.error || 'ì €ì¥ ì‹¤íŒ¨', true);
                }
            } catch (err) {
                showToast('ì €ì¥ ì¤‘ ì˜¤ë¥˜ ë°œìƒ', true);
            }
        }

        // ë©€í‹°ë¼ì¸ ì—ë””í„° ê´€ë ¨ ë³€ìˆ˜
        let currentMultilineInfo = null;

        // ë©€í‹°ë¼ì¸ ì—ë””í„° ì—´ê¸°
        function openMultilineEditor(lineNumber, startLine, endLine, content) {
            currentMultilineInfo = { lineNumber, startLine, endLine };
            document.getElementById('multilineEditor').value = content;
            document.getElementById('multilineLineInfo').textContent = `ë¼ì¸ ${startLine} ~ ${endLine}`;
            document.getElementById('multilineModal').classList.add('active');
            showToast('ë©€í‹°ë¼ì¸ í¸ì§‘ ëª¨ë“œë¡œ ì „í™˜ë˜ì—ˆìŠµë‹ˆë‹¤.', false);
        }

        // ë”ë¸”í´ë¦­ìœ¼ë¡œ ë©€í‹°ë¼ì¸ ì—ë””í„° ì—´ê¸° (ë¼ì¸ ì •ë³´ ì¡°íšŒ í›„)
        async function openMultilineEditorForLine(lineNumber) {
            try {
                const response = await fetch(`/line-info?filename=${filename}&line=${lineNumber}`);
                const result = await response.json();

                if (result.success) {
                    openMultilineEditor(lineNumber, result.startLine, result.endLine, result.content);
                } else {
                    showToast(result.error || 'ë¼ì¸ ì •ë³´ë¥¼ ê°€ì ¸ì˜¬ ìˆ˜ ì—†ìŠµë‹ˆë‹¤.', true);
                }
            } catch (err) {
                showToast('ë¼ì¸ ì •ë³´ ì¡°íšŒ ì¤‘ ì˜¤ë¥˜ ë°œìƒ', true);
            }
        }

        // ë©€í‹°ë¼ì¸ ì—ë””í„° ë‹«ê¸°
        document.getElementById('multilineModalClose').addEventListener('click', function () {
            document.getElementById('multilineModal').classList.remove('active');
            currentMultilineInfo = null;
        });

        document.getElementById('multilineModal').addEventListener('click', function (e) {
            if (e.target === this) {
                this.classList.remove('active');
                currentMultilineInfo = null;
            }
        });

        // ë©€í‹°ë¼ì¸ ì €ì¥
        document.getElementById('btnSaveMultiline').addEventListener('click', async function () {
            if (!currentMultilineInfo) return;

            const content = document.getElementById('multilineEditor').value;
            try {
                const response = await fetch('/save-multiline', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        filename,
                        startLine: currentMultilineInfo.startLine,
                        endLine: currentMultilineInfo.endLine,
                        content
                    })
                });
                const result = await response.json();
                if (result.success) {
                    document.getElementById('multilineModal').classList.remove('active');
                    showToast('âœ“ ë©€í‹°ë¼ì¸ ì €ì¥ ì™„ë£Œ. í˜ì´ì§€ë¥¼ ìƒˆë¡œê³ ì¹¨í•©ë‹ˆë‹¤.');
                    setTimeout(() => location.reload(), 1500);
                } else {
                    showToast(result.error || 'ì €ì¥ ì‹¤íŒ¨', true);
                }
            } catch (err) {
                showToast('ì €ì¥ ì¤‘ ì˜¤ë¥˜ ë°œìƒ', true);
            }
        });

        // ë˜ëŒë¦¬ê¸°
        document.getElementById('btnUndo').addEventListener('click', async function () {
            try {
                const response = await fetch('/undo', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });

                const result = await response.json();

                if (result.success) {
                    // ë©€í‹°ë¼ì¸ ë˜ëŒë¦¬ê¸°ì˜ ê²½ìš° ì‹œì‘ ë¼ì¸ ìš”ì†Œ ì—…ë°ì´íŠ¸
                    if (result.isMultiline) {
                        const el = document.querySelector(`[data-line="${result.startLine}"]`);
                        if (el) {
                            // ë³µì›ëœ ë‚´ìš©ì—ì„œ í…ìŠ¤íŠ¸ë§Œ ì¶”ì¶œí•´ì„œ í‘œì‹œ
                            const temp = document.createElement('div');
                            temp.innerHTML = result.restoredContent;
                            el.innerHTML = temp.innerHTML;
                        }
                        showToast('â†© ë©€í‹°ë¼ì¸ ë˜ëŒë¦¬ê¸° ì™„ë£Œ');
                    } else {
                        // í•´ë‹¹ ë¼ì¸ ìš”ì†Œ ì°¾ì•„ì„œ ì—…ë°ì´íŠ¸
                        const el = document.querySelector(`[data-line="${result.line_number}"]`);
                        if (el) {
                            // íƒœê·¸ ì‚¬ì´ì˜ í…ìŠ¤íŠ¸ë§Œ ì¶”ì¶œí•´ì„œ í‘œì‹œ
                            const temp = document.createElement('div');
                            temp.innerHTML = result.content;
                            el.textContent = temp.textContent;
                        }
                        showToast('â†© ë˜ëŒë¦¬ê¸° ì™„ë£Œ');
                    }
                } else {
                    showToast(result.error || 'ë˜ëŒë¦´ ê¸°ë¡ì´ ì—†ìŠµë‹ˆë‹¤', true);
                }
            } catch (err) {
                showToast('ë˜ëŒë¦¬ê¸° ì¤‘ ì˜¤ë¥˜ ë°œìƒ', true);
            }
        });

        // ë³µì› ëª¨ë‹¬ ì—´ê¸°
        document.getElementById('btnRestore').addEventListener('click', async function () {
            document.getElementById('restoreModal').classList.add('active');
            loadBackups();
        });

        // ëª¨ë‹¬ ë‹«ê¸°
        document.getElementById('modalClose').addEventListener('click', function () {
            document.getElementById('restoreModal').classList.remove('active');
        });

        document.getElementById('restoreModal').addEventListener('click', function (e) {
            if (e.target === this) {
                this.classList.remove('active');
            }
        });

        // ì†ŒìŠ¤ í¸ì§‘ ëª¨ë‹¬ ì—´ê¸°
        document.getElementById('btnSource').addEventListener('click', async function () {
            try {
                const response = await fetch(`/source?filename=${encodeURIComponent(filename)}`);
                const result = await response.json();
                if (result.content) {
                    document.getElementById('sourceEditor').value = result.content;
                    document.getElementById('sourceModal').classList.add('active');
                } else {
                    showToast('ì†ŒìŠ¤ë¥¼ ë¶ˆëŸ¬ì˜¬ ìˆ˜ ì—†ìŠµë‹ˆë‹¤', true);
                }
            } catch (err) {
                showToast('ì†ŒìŠ¤ ë¡œë“œ ì¤‘ ì˜¤ë¥˜ ë°œìƒ', true);
            }
        });

        // ì†ŒìŠ¤ í¸ì§‘ ëª¨ë‹¬ ë‹«ê¸°
        document.getElementById('sourceModalClose').addEventListener('click', function () {
            document.getElementById('sourceModal').classList.remove('active');
        });

        document.getElementById('sourceModal').addEventListener('click', function (e) {
            if (e.target === this) {
                this.classList.remove('active');
            }
        });

        // ì†ŒìŠ¤ ì €ì¥
        document.getElementById('btnSaveSource').addEventListener('click', async function () {
            const content = document.getElementById('sourceEditor').value;
            try {
                const response = await fetch('/save-source', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ filename, content })
                });
                const result = await response.json();
                if (result.success) {
                    document.getElementById('sourceModal').classList.remove('active');
                    showToast('âœ“ ì†ŒìŠ¤ê°€ ì €ì¥ë˜ì—ˆìŠµë‹ˆë‹¤. í˜ì´ì§€ë¥¼ ìƒˆë¡œê³ ì¹¨í•©ë‹ˆë‹¤.');
                    setTimeout(() => location.reload(), 1500);
                } else {
                    showToast(result.error || 'ì €ì¥ ì‹¤íŒ¨', true);
                }
            } catch (err) {
                showToast('ì €ì¥ ì¤‘ ì˜¤ë¥˜ ë°œìƒ', true);
            }
        });

        // ì†ŒìŠ¤ ì •ë ¬ (beautify)
        document.getElementById('btnFormatSource').addEventListener('click', async function () {
            const content = document.getElementById('sourceEditor').value;
            try {
                const response = await fetch('/format-source', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ content })
                });
                const result = await response.json();
                if (result.success) {
                    document.getElementById('sourceEditor').value = result.formattedContent;
                    showToast('âœ“ ì†ŒìŠ¤ê°€ ì •ë ¬ë˜ì—ˆìŠµë‹ˆë‹¤');
                } else {
                    showToast(result.error || 'ì •ë ¬ ì‹¤íŒ¨', true);
                }
            } catch (err) {
                showToast('ì •ë ¬ ì¤‘ ì˜¤ë¥˜ ë°œìƒ', true);
            }
        });

        // ë°±ì—… ëª©ë¡ ë¡œë“œ
        async function loadBackups() {
            const listEl = document.getElementById('backupList');
            listEl.innerHTML = '<li class="no-backups">ë°±ì—… ëª©ë¡ì„ ë¶ˆëŸ¬ì˜¤ëŠ” ì¤‘...</li>';

            try {
                const response = await fetch(`/backups?filename=${encodeURIComponent(filename)}`);
                const result = await response.json();

                if (result.backups && result.backups.length > 0) {
                    listEl.innerHTML = result.backups.map(backup => `
                        <li class="backup-item">
                            <div class="backup-info">
                                <div>${backup.name}</div>
