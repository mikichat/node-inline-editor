        }

        ::selection {
            background: rgba(139, 92, 246, 0.4);
            color: #ffffff;
        }

        .toolbar-right {
            display: flex;
            gap: 10px;
        }

        .btn {
            padding: 10px 24px;
            border: none;
            border-radius: 8px;
            font-size: 0.9rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-undo {
            background: linear-gradient(135deg, #ff6b6b, #ee5a24);
            color: white;
        }

        .btn-undo:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(238, 90, 36, 0.4);
        }

        .btn-restore {
            background: linear-gradient(135deg, #a55eea, #8854d0);
            color: white;
        }

        .btn-restore:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(136, 84, 208, 0.4);
        }

        .editor-container {
            margin-top: 80px;
            padding: 40px;
        }

        .content-frame {
            background: white;
            border-radius: 16px;
            padding: 40px;
            min-height: calc(100vh - 200px);
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        }

        .content-frame [data-line] {
            position: relative;
            cursor: text;
            padding: 4px 8px;
            margin: 2px 0;
            border-radius: 4px;
            transition: all 0.2s ease;
        }

        .content-frame [data-line]:hover {
            background: rgba(139, 92, 246, 0.1);
            /* Violet Tint */
        }

        .content-frame [data-line]:focus {
            outline: 2px solid #8b5cf6;
            /* Modern Violet */
            background: rgba(139, 92, 246, 0.15);
        }

        .content-frame [data-line]::before {
            content: none;
        }

        /* ëª¨ë‹¬ ìŠ¤íƒ€ì¼ */
        .modal-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.7);
            backdrop-filter: blur(5px);
            z-index: 2000;
            justify-content: center;
            align-items: center;
        }

        .modal-overlay.active {
            display: flex;
        }

        .modal {
            background: #1a1a2e;
            border-radius: 16px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            width: 90%;
            max-width: 600px;
            max-height: 80vh;
            overflow: hidden;
        }

        .modal-header {
            padding: 20px 25px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .modal-header h2 {
            font-size: 1.3rem;
            background: linear-gradient(90deg, #a55eea, #8854d0);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .modal-close {
            background: none;
            border: none;
            color: #888;
            font-size: 1.5rem;
            cursor: pointer;
            transition: color 0.3s;
        }

        .modal-close:hover {
            color: #fff;
        }

        .modal-body {
            padding: 20px 25px;
            max-height: 60vh;
            overflow-y: auto;
        }

        .backup-list {
            list-style: none;
        }

        .backup-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 8px;
            margin-bottom: 10px;
            transition: all 0.3s ease;
        }

        .backup-item:hover {
            background: rgba(255, 255, 255, 0.1);
        }

        .backup-info {
            font-size: 0.9rem;
        }

        .backup-time {
            color: #888;
            font-size: 0.8rem;
            margin-top: 4px;
        }

        .btn-restore-item {
            padding: 8px 16px;
            background: linear-gradient(135deg, #00d9ff, #00ff88);
            border: none;
            border-radius: 6px;
            color: #1a1a2e;
            font-weight: 500;
            font-size: 0.85rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-restore-item:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 15px rgba(0, 217, 255, 0.4);
        }

        .no-backups {
            text-align: center;
            color: #666;
            padding: 40px 20px;
        }

        /* í† ìŠ¤íŠ¸ ì•Œë¦¼ */
        .toast {
            position: fixed;
            bottom: 30px;
            right: 30px;
            padding: 15px 25px;
            background: linear-gradient(135deg, #00d9ff, #00ff88);
            color: #1a1a2e;
            border-radius: 10px;
            font-weight: 500;
            transform: translateY(100px);
            opacity: 0;
            transition: all 0.3s ease;
            z-index: 3000;
        }

        .toast.show {
            transform: translateY(0);
            opacity: 1;
        }

        .toast.error {
            background: linear-gradient(135deg, #ff6b6b, #ee5a24);
            color: white;
        }
    </style>
</head>

<body>
    <div class="toolbar">
        <div class="toolbar-left">
            <a href="/" class="btn-back">â† ëª©ë¡ìœ¼ë¡œ</a>
            <span class="filename">ğŸ“„ <%= filename %></span>
        </div>
        <div class="toolbar-right">
            <button id="btnUndo" class="btn btn-undo">â†© ë˜ëŒë¦¬ê¸°</button>
            <button id="btnRestore" class="btn btn-restore">ğŸ“ ë³µì›</button>
        </div>
    </div>

    <div class="editor-container">
        <div class="content-frame" id="contentFrame">
            <%- content %>
        </div>
    </div>

    <!-- ë³µì› ëª¨ë‹¬ -->
    <div class="modal-overlay" id="restoreModal">
        <div class="modal">
            <div class="modal-header">
                <h2>ğŸ“ ë°±ì—…ì—ì„œ ë³µì›</h2>
                <button class="modal-close" id="modalClose">&times;</button>
            </div>
            <div class="modal-body">
                <ul class="backup-list" id="backupList">
                    <li class="no-backups">ë°±ì—… ëª©ë¡ì„ ë¶ˆëŸ¬ì˜¤ëŠ” ì¤‘...</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="toast" id="toast"></div>

    <script>
        const filename = '<%= filename %>';
        let originalText = '';

        // í† ìŠ¤íŠ¸ ì•Œë¦¼ í‘œì‹œ
        function showToast(message, isError = false) {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.className = 'toast' + (isError ? ' error' : '');
            toast.classList.add('show');
            setTimeout(() => toast.classList.remove('show'), 3000);
        }

        // contenteditable ì„¤ì •
        document.querySelectorAll('[data-line]').forEach(el => {
            el.setAttribute('contenteditable', 'true');

            // focus ì‹œ ì›ë³¸ ì €ì¥
            el.addEventListener('focus', function () {
                originalText = this.innerHTML;
            });

            // blur ì‹œ ë³€ê²½ ê°ì§€ ë° ì €ì¥
            el.addEventListener('blur', function () {
                const newText = this.innerHTML.trim();
                if (newText !== originalText.trim()) {
                    const lineNumber = this.getAttribute('data-line');
                    saveContent(lineNumber, newText);
                }
            });

            // Enter í‚¤ ë°©ì§€
            el.addEventListener('keydown', function (e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    this.blur();
                }
            });

            // ë¶™ì—¬ë„£ê¸° ì‹œ í…ìŠ¤íŠ¸ë§Œ í—ˆìš©
            el.addEventListener('paste', function (e) {
                e.preventDefault();
                const text = e.clipboardData.getData('text/plain');
                document.execCommand('insertText', false, text);
            });
        });

        // ì €ì¥ API í˜¸ì¶œ
        async function saveContent(lineNumber, content) {
            try {
                const response = await fetch('/save', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ filename, line_number: lineNumber, content })
                });

                const result = await response.json();

                if (result.success) {
                    showToast('âœ“ ì €ì¥ë˜ì—ˆìŠµë‹ˆë‹¤');
                } else {
                    showToast(result.error || 'ì €ì¥ ì‹¤íŒ¨', true);
                }
            } catch (err) {
                showToast('ì €ì¥ ì¤‘ ì˜¤ë¥˜ ë°œìƒ', true);
            }
        }

        // ë˜ëŒë¦¬ê¸°
        document.getElementById('btnUndo').addEventListener('click', async function () {
            try {
                const response = await fetch('/undo', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });

                const result = await response.json();

                if (result.success) {
                    // í•´ë‹¹ ë¼ì¸ ìš”ì†Œ ì°¾ì•„ì„œ ì—…ë°ì´íŠ¸
                    const el = document.querySelector(`[data-line="${result.line_number}"]`);
                    if (el) {
                        // íƒœê·¸ ì‚¬ì´ì˜ í…ìŠ¤íŠ¸ë§Œ ì¶”ì¶œí•´ì„œ í‘œì‹œ
                        const temp = document.createElement('div');
                        temp.innerHTML = result.content;
                        el.textContent = temp.textContent;
                    }
                    showToast('â†© ë˜ëŒë¦¬ê¸° ì™„ë£Œ');
                } else {
                    showToast(result.error || 'ë˜ëŒë¦´ ê¸°ë¡ì´ ì—†ìŠµë‹ˆë‹¤', true);
                }
            } catch (err) {
                showToast('ë˜ëŒë¦¬ê¸° ì¤‘ ì˜¤ë¥˜ ë°œìƒ', true);
            }
        });

        // ë³µì› ëª¨ë‹¬ ì—´ê¸°
        document.getElementById('btnRestore').addEventListener('click', async function () {
            document.getElementById('restoreModal').classList.add('active');
            loadBackups();
        });

        // ëª¨ë‹¬ ë‹«ê¸°
        document.getElementById('modalClose').addEventListener('click', function () {
            document.getElementById('restoreModal').classList.remove('active');
        });

        document.getElementById('restoreModal').addEventListener('click', function (e) {
            if (e.target === this) {
                this.classList.remove('active');
            }
        });

        // ë°±ì—… ëª©ë¡ ë¡œë“œ
        async function loadBackups() {
            const listEl = document.getElementById('backupList');
            listEl.innerHTML = '<li class="no-backups">ë°±ì—… ëª©ë¡ì„ ë¶ˆëŸ¬ì˜¤ëŠ” ì¤‘...</li>';

            try {
                const response = await fetch(`/backups?filename=${encodeURIComponent(filename)}`);
                const result = await response.json();

                if (result.backups && result.backups.length > 0) {
                    listEl.innerHTML = result.backups.map(backup => `
                        <li class="backup-item">
                            <div class="backup-info">
                                <div>${backup.name}</div>
                                <div class="backup-time">${new Date(backup.mtime).toLocaleString('ko-KR')}</div>
                            </div>
                            <button class="btn-restore-item" onclick="restoreBackup('${backup.name}')">ë³µì›</button>
                        </li>
                    `).join('');
                } else {
                    listEl.innerHTML = '<li class="no-backups">ë°±ì—… íŒŒì¼ì´ ì—†ìŠµë‹ˆë‹¤.</li>';
                }
            } catch (err) {
                listEl.innerHTML = '<li class="no-backups">ë°±ì—… ëª©ë¡ì„ ë¶ˆëŸ¬ì˜¬ ìˆ˜ ì—†ìŠµë‹ˆë‹¤.</li>';
            }
        }

        // ë°±ì—…ì—ì„œ ë³µì›
        async function restoreBackup(backupFile) {
            if (!confirm(`'${backupFile}' ë°±ì—…ìœ¼ë¡œ ë³µì›í•˜ì‹œê² ìŠµë‹ˆê¹Œ?\ní˜„ì¬ ë‚´ìš©ì€ ìë™ìœ¼ë¡œ ë°±ì—…ë©ë‹ˆë‹¤.`)) {
                return;
            }

            try {
                const response = await fetch('/restore', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ filename, backupFile })
                });

                const result = await response.json();

                if (result.success) {
                    document.getElementById('restoreModal').classList.remove('active');
                    showToast('âœ“ ë³µì›ë˜ì—ˆìŠµë‹ˆë‹¤. í˜ì´ì§€ë¥¼ ìƒˆë¡œê³ ì¹¨í•©ë‹ˆë‹¤.');
                    setTimeout(() => location.reload(), 1500);
                } else {
                    showToast(result.error || 'ë³µì› ì‹¤íŒ¨', true);
                }
            } catch (err) {
                showToast('ë³µì› ì¤‘ ì˜¤ë¥˜ ë°œìƒ', true);
            }
        }
    </script>
</body>

</html>